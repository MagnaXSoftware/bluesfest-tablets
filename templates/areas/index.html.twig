{% extends "layout.html.twig" %}

{% block content %}
<table>
    <tr>
        <th>Area</th>
        <th>Expected tablets</th>
        <th></th>
    </tr>
    {% for area in areas %}
    <tr>
        <td><a href="{{ url_for('area:view', {'id':area.id}) }}">{{ area.name }}</a></td>
        <td class="num">{{ area.expected|default('n/a') }}</td>
        <td><a href="{{ url_for('area:update', {'id':area.id}) }}">Update</a></td>
    </tr>
    {% else %}
    <tr>
        <td colspan="3"><em>No Areas Defined</em></td>
    </tr>
    {% endfor %}
</table>
{% endblock content %}